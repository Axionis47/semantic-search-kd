# Environment Configuration Template
# Copy to .env and fill in actual values

# GCP Configuration
GCP_PROJECT_ID=plotpointe
GCP_REGION=us-central1
GCS_BUCKET_MODELS=gs://plotpointe-semantic-kd-models
GCS_BUCKET_INDEXES=gs://plotpointe-semantic-kd-indexes
GCS_BUCKET_DATA=gs://plotpointe-semantic-kd-data

# Service Configuration
SERVICE_NAME=semantic-kd
SERVICE_PORT=8080
SERVICE_HOST=0.0.0.0
LOG_LEVEL=INFO

# Model Configuration
TEACHER_MODEL=BAAI/bge-reranker-large
STUDENT_MODEL=intfloat/e5-small-v2
MAX_SEQ_LENGTH=512
EMBEDDING_DIM=384

# Index Configuration
INDEX_TYPE=hnsw
INDEX_M=32
INDEX_EF_CONSTRUCTION=200
INDEX_EF_SEARCH=64

# Service Behavior
RERANK_THRESHOLD=0.6
DEFAULT_TOP_K=10
RERANK_TIMEOUT_MS=5000
ENABLE_RERANK=true

# Grafana (required for docker-compose monitoring profile)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Data Paths
DATA_DIR=./data
ARTIFACTS_DIR=./artifacts
MODELS_DIR=./artifacts/models
INDEX_DIR=./artifacts/indexes

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=1000
EVAL_STEPS=500
SAVE_STEPS=1000

# Security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
ENABLE_HYBRID_RETRIEVAL=true
ENABLE_QUERY_EXPANSION=false
ENABLE_LATE_INTERACTION=false

